<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
     <LinearLayout
         android:id="@+id/lnrImageView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:background="@drawable/subcategory"
             />
     </LinearLayout>
      <LinearLayout
          android:id="@+id/lnrImageWithTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/lnrImageView"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/vegOrNonVegImageView"
              android:layout_width="0dp"
              android:layout_height="10dp"
              android:layout_marginTop="6dp"
              android:background="@drawable/veg"
              android:layout_weight="0.1"
              />
          <TextView
              android:id="@+id/tvItemName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="McSaver Small Wedges"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/black"
              android:textSize="16sp"
              android:maxLines="2"
              android:layout_weight="1"
              />
          <TextView
             android:id="@+id/tvDeleteItem"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:drawableRight="@drawable/ic_red_delete_outline"
              android:layout_gravity="right"
              android:layout_weight="0.1"
              />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/lnrDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="40dp"
          android:layout_marginTop="10dp"
          android:layout_toRightOf="@+id/lnrImageView"
          android:layout_below="@+id/lnrImageWithTitle">
          <TextView
              android:id="@+id/tvPrice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="AED 116"
              android:layout_weight="0.4"
              android:fontFamily="@font/roboto_regular"
              android:textColor="@color/green"
              android:textSize="16sp"

              />
      </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lnrDescription"
        android:layout_below="@+id/lnrImageWithTitle"
        android:background="@drawable/backgroung_rectangle_grey"
        >
       <TextView
            android:id="@+id/tvDecrement"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvItemBaseQuantity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            />
        <TextView
            android:id="@+id/tvIncrement"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="18sp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:gravity="center"
            />

        </LinearLayout>

  </RelativeLayout>
</LinearLayout>